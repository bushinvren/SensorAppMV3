<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@id/simpledigitalclock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="40dp"
        android:singleLine="true"
        android:text="12:05"
        android:textColor="#ffffffff"
        android:textScaleX="0.8"
        android:textSize="160sp" />

    <FrameLayout
        android:id="@id/framelayoutcenterline"
        android:layout_width="match_parent"
        android:layout_height="32.0dip"
        android:visibility="invisible" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageViewcloudicon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/new_cloud2" />

        <ImageView
            android:id="@id/imageViewmissedincomingicon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/new_unanswer"
            android:visibility="invisible" />

        <ImageView
            android:id="@id/imageViewnewmessageicon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/new_sms"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageViewbatterylowicon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/new_battery"
            android:visibility="invisible" />
    </FrameLayout>

</LinearLayout>