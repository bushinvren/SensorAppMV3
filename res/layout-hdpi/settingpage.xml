<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/titleBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#555555" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dip"
            android:gravity="center"
            android:text="@string/settingStr"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/serviceFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="10" >

                <TextView
                    android:id="@+id/serviceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="@string/startTipStr"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/serviceTip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/serviceTitle"
                    android:layout_below="@id/serviceTitle"
                    android:layout_marginLeft="10dip"
                    android:text="@string/startContentStr"
                    android:textColor="#888888"
                    android:textSize="16sp" />
            </RelativeLayout>

            <CheckBox
                android:id="@+id/serviceStartCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dip" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="bottom"
            android:background="#555555" >
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/startServiceFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="10" >

                <TextView
                    android:id="@+id/startServiceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="@string/startOrStopStr"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/startServiceTip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/startServiceTitle"
                    android:layout_below="@id/startServiceTitle"
                    android:layout_marginLeft="10dip"
                    android:text="@string/startOrstopContentStr"
                    android:textColor="#888888"
                    android:textSize="16sp" />
            </RelativeLayout>

            <CheckBox
                android:id="@+id/openServiceCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dip" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="bottom"
            android:background="#555555" >
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/setBackgroundFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:visibility="visible" >

        <TextView
            android:id="@+id/setBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="@string/settingbgStr"
            android:textColor="@android:color/white"
            android:textSize="20sp" >
        </TextView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="bottom"
            android:background="#555555" >
        </FrameLayout>
    </FrameLayout>

</LinearLayout>